{
    "name": "Ethicli",
    "version": "0.1",
    "description": "To help you make ethical online shopping choices",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["content.js"]
    }],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Ethicli",
        "default_icon": {
            "16": "icons/get_started16.png",
            "32": "icons/get_started32.png",
            "48": "icons/get_started48.png",
            "128": "icons/get_started128.png"
        }
    },
    "icons": {
        "16": "icons/get_started16.png",
        "32": "icons/get_started32.png",
        "48": "icons/get_started48.png",
        "128": "icons/get_started128.png"
    },
    "permissions": [
        "tabs"
    ],
    "manifest_version": 2
}